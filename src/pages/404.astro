---
export const prerender = true;
import Layout from "../layouts/Default.astro";
import "../styles/page.css";
---

<Layout>
    <style>
        .layout.centered {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .huge-text {
            font-size: 5em;
        }
        .home-link {
            filter: invert(1);
            margin-top: 50px;
            width: 68px;
            height: 68px;
        }
    </style>
    <div class="layout centered">
        <h1 class="huge-text">404</h1>
        <a href="/">Go Home</a>
    </div>
</Layout>
