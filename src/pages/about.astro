---
import Layout from "../layouts/Default.astro";
import Skills from "../components/Page/Skills.astro";
import Footer from "../components/Page/Footer.astro";

const profileData = {
    games: {
        "Geometry Dash": { 
            url: "https://store.steampowered.com/app/322170/Geometry_Dash/", 
            color: "rgba(255, 255, 51, 0.1)" 
        },
        "Minecraft": { 
            url: "https://www.minecraft.net/", 
            color: "rgba(0, 128, 0, 0.1)" 
        },
        "Subnautica": { 
            url: "https://store.steampowered.com/app/264710/Subnautica/", 
            color: "rgba(0, 191, 255, 0.1)" 
        },
        "Terraria": { 
            url: "https://store.steampowered.com/app/105600/Terraria/", 
            color: "rgba(255, 69, 0, 0.1)" 
        },
        "Noita": { 
            url: "https://store.steampowered.com/app/881100/Noita/", 
            color: "rgba(255, 215, 0, 0.1)" 
        },
        "Half-Life 2": { 
            url: "https://store.steampowered.com/app/220/HalfLife_2/", 
            color: "rgba(128, 128, 128, 0.1)" 
        },
    },
    songs: {
        "lexycat": { 
            url: "https://open.spotify.com/artist/4h2w55mRM0SkL9c0fu3qAC", 
            color: "rgba(161, 51, 255, 0.1)" 
        },
        "Bladee": { 
            url: "https://open.spotify.com/artist/2xvtxDNInKDV4AvGmjw6d1", 
            color: "rgba(51, 255, 87, 0.1)" 
        },
        "okameP": { 
            url: "https://open.spotify.com/artist/1KC8BTeLDKxPr4Z19HJ6mp", 
            color: "rgba(51, 87, 255, 0.1)" 
        },
        "Sadness": { 
            url: "https://open.spotify.com/artist/04tDiz6koPFuo5JBZyLgFg", 
            color: "rgba(255, 51, 161, 0.1)" 
        },
        "Trhä": { 
            url: "https://open.spotify.com/artist/5LCW1YUGpMpsWklZ36rp91", 
            color: "rgba(255, 182, 193, 0.1)" 
        },
        "Team Grimoire": { 
            url: "https://open.spotify.com/artist/3JL2xJoZQDP7NjNiEmVpfa", 
            color: "rgba(128, 128, 128, 0.1)" 
        },
        "abriction": { 
            url: "https://open.spotify.com/artist/72qOGv3zp1iEaOpQIHXF7g", 
