---
import "../styles/global.css";
import "../styles/snowflakes.css";

import Header from "../components/Header.astro";
import Head from "../components/Head.astro";
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <Head/>
    <style>
        .footer-gif {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 150px; /* Set your desired height */
            background: url('../components/footer-assets/blink-ezgif.avif') repeat-x;
            background-size: contain;
        }
    </style>
</head>

<body class="bg-black text-white">
    <Header/>
    <div class="footer-gif"></div>
    <main>
        <slot/>
    </main>
    <div id="snowflakes" aria-hidden="true"></div>
    <script src="../scripts/snowflakes.js"></script>
</body>
</html>
